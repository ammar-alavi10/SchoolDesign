<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Sknse.ParentAlert">


    <Button
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:text="Normal Alert"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="#263f56"
        android:onClick="NormalAlert"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:text="Student Feedback"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/circular_progress_default_background"
        android:textSize="20sp"
        android:onClick="StudentFeedback"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:text="Super Alert"
        android:padding="20dp"
        android:backgroundTint="@color/design_default_color_error"
        android:textSize="20sp"
        android:onClick="SuperAlert"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white"
            android:layout_gravity="bottom"
            android:elevation="8dp"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/black">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_ic"
                android:layout_gravity="center"
                android:background="@color/black"
                android:onClick="HomeClicked"/>

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>


</LinearLayout>