<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sknse.TestList">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/test_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/test_list_item" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_list_recycler"
        android:textColor="@color/white"
        android:padding="@dimen/layout_margin_10dp"
        android:id="@+id/result_btn"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:onClick="ShowTestScores"
        android:text="Previous test results"/>


</RelativeLayout>