<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bgBackSideColor"
    tools:context=".Sknse.ClassToppers">

    <view
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="150dp"
        android:background="@color/black"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/topper_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="1st : "
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_1"
            android:text="Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginStart="35dp"
            android:id="@+id/marks_1"
            android:text="100"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/topper_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="2nd : "
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_2"
            android:text="Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginStart="35dp"
            android:id="@+id/marks_2"
            android:text="100"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/topper_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="3rd : "
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_3"
            android:text="Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginStart="35dp"
            android:id="@+id/marks_3"
            android:text="100"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/topper_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="4th : "
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_4"
            android:text="Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginStart="35dp"
            android:id="@+id/marks_4"
            android:text="100"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/topper_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="5th : "
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_5"
            android:text="Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginStart="35dp"
            android:id="@+id/marks_5"
            android:text="100"/>

    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white"
            android:layout_gravity="bottom"
            android:elevation="8dp"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/black">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_ic"
                android:layout_gravity="center"
                android:background="@color/black"
                android:onClick="HomeClicked"/>

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>

</LinearLayout>