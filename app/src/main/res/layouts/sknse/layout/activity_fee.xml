<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Sknse.FeeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Pay fees using the QR Code or paying on the below number"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:text="Select Fees Receipt"
        android:clickable="true"
        android:focusable="true"
        android:onClick="ChooseFile"
        android:textColor="@color/black"
        android:background="@color/circular_progress_default_progress"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_10dp"
        android:text="Uploa Receipt"
        android:onClick="UploadReceipt"/>


</LinearLayout>