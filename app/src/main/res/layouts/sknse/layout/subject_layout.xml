<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/layout_margin_5dp"
    android:id="@+id/classcard"
    android:padding="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:elevation="8dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classbg"
        android:background="@color/colorAccentLight">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classname"
            android:text="Subject Sample"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/color_username_rectangle"
            android:layout_below="@id/classname"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclertext2"
            android:layout_marginTop="3dp"
            android:text="Teacher Name"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#F2F2F3"
            android:layout_below="@id/classname"
            android:padding="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

