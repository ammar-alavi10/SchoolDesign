<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Sknse.TestSeries">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/notice_toolbar"
        app:title="Online Test Series"
        app:titleTextColor="@color/white"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/black"/>

    <android.widget.Button
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:text="MCQs"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/test_1"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="#263f56"
        android:onClick="MCQClicked"/>

    <android.widget.Button
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:text="Fill in the blanks"
        android:drawableStart="@drawable/test3"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/circular_progress_default_background"
        android:textSize="20sp"
        android:onClick="FillinTheBlanks"/>

    <android.widget.Button
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:text="True or False"
        android:drawableStart="@drawable/test2"
        android:padding="20dp"
        android:drawablePadding="20dp"
        android:backgroundTint="@color/design_default_color_error"
        android:textSize="20sp"
        android:onClick="TrueOrFalse"/>

</LinearLayout>